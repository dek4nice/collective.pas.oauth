<?xml version="1.0"?>
<object name="portal_actions"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="collective.pas.oauth">

    <object name="user">

        <object name="facebook-login" meta_type="CMF Action" i18n:domain="collective.pas.oauth">
            <property name="title" i18n:translate="">Login with Facebook</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:$portal_url/@@login-facebook</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:member is None</property>
            <property name="permissions">
            <element value="View"/>
            </property>
            <property name="visible">True</property>
        </object>

        <object name="twitter-login" meta_type="CMF Action" i18n:domain="collective.pas.oauth">
            <property name="title" i18n:translate="">Login with Twitter</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:$portal_url/@@login-twitter</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:member is None</property>
            <property name="permissions">
            <element value="View"/>
            </property>
            <property name="visible">True</property>
        </object>

        <object name="google-login" meta_type="CMF Action" i18n:domain="collective.pas.oauth">
            <property name="title" i18n:translate="">Login with Google</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:$portal_url/@@login-google</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:member is None</property>
            <property name="permissions">
            <element value="View"/>
            </property>
            <property name="visible">True</property>
        </object>

    </object>

</object>
